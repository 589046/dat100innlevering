package obligInnlevering;

import java.util.Scanner;

public class Oppgåve4 {
	public static void main(String[] args) {
		Scanner inn = new Scanner (System.in);
		int lønn = inn.nextInt();
		
		if (lønn < 180800) {
			double skatt = 0;
			System.out.println(skatt);
			
		} if (lønn >= 180800 && lønn < 254500) { 	//reknar ut skatten for trinn1 
			lønn = lønn-180800;
			double trinn1 = (lønn*0.019);
			System.out.println(trinn1);
			
			double skatt = + trinn1;
			System.out.println(skatt);
			
		} if (lønn >= 254500 && lønn < 639750) {	//reknar ut skatten for trinn2
			lønn = lønn-180800;
			
			double trinn1 = 73700 * 0.019;
			lønn = lønn-73700;
			double trinn2 = lønn *0.042;
		
			System.out.println(trinn1);
			System.out.println(trinn2);
			
			double skatt = trinn1 + trinn2;
			System.out.println(skatt);
		}
		if (lønn >= 639750 && lønn < 999550) { 		//reknar ut skatten for trinn3
			lønn = lønn-180800;
			
			double trinn1 = 73700*0.019;
			lønn = lønn - 73700;
			
			double trinn2 = 385250*0.042;
			lønn = lønn - 385250;
			
			double trinn3 = lønn*0.132;
			
			System.out.println(trinn1);
			System.out.println(trinn2);
			System.out.println(trinn3);
			
			double skatt = trinn1 + trinn2 + trinn3;
			System.out.println(skatt);
		}
		if (lønn >= 999550) {						//reknar ut skatten for trinn4
			lønn = lønn-180800;
			
			double trinn1 = 73700*0.019;
			lønn = lønn - 73700;
			
			double trinn2 = 385250*0.042;
			lønn = lønn - 385250;
			
			double trinn3 = 359750*0.132;
			lønn = lønn - 359800;
			
			double trinn4 = lønn*0.162;
			
			System.out.println(trinn1);
			System.out.println(trinn2);
			System.out.println(trinn3);
			System.out.println(trinn4);
			
			double skatt = trinn1 + trinn2 + trinn3 + trinn4;
			System.out.println("Din samanlagte trinnskatt er: " +skatt);
		}
		
	}
}
